---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import EmailForm from '../components/EmailForm.astro';
---

<Layout title="TaskFlow Pro - Advanced Task Management" description="Boost your productivity with TaskFlow Pro's smart automation and team collaboration features. Download now on iOS App Store.">
  <Header variant="app" appName="TaskFlow Pro" />
  
  <!-- Hero Section -->
  <section class="app-hero taskflow-hero">
    <div class="container">
      <div class="hero-content">
        <div class="hero-text">
          <div class="app-badge">
            <div class="badge-icon taskflow-gradient">
              <svg width="24" height="24" fill="white" viewBox="0 0 24 24">
                <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
              </svg>
            </div>
            <div>
              <h1 class="app-title">TaskFlow Pro</h1>
              <p class="app-subtitle">Advanced Task Management</p>
            </div>
          </div>
          
          <p class="hero-description">
            Transform your productivity with intelligent task automation, seamless team collaboration, 
            and powerful analytics. The ultimate tool for professionals and teams.
          </p>
          
          <div class="app-stats">
            <div class="stat-item">
              <span class="stat-number">4.9</span>
              <div class="star-rating">
                <svg width="16" height="16" fill="#FFD700" viewBox="0 0 24 24" class="star">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
                <svg width="16" height="16" fill="#FFD700" viewBox="0 0 24 24" class="star">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
                <svg width="16" height="16" fill="#FFD700" viewBox="0 0 24 24" class="star">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
                <svg width="16" height="16" fill="#FFD700" viewBox="0 0 24 24" class="star">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
                <svg width="16" height="16" fill="#FFD700" viewBox="0 0 24 24" class="star">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
              </div>
              <span class="stat-label">500K+ Reviews</span>
            </div>
            <div class="stat-item">
              <span class="stat-number">500K+</span>
              <span class="stat-label">Downloads</span>
            </div>
          </div>
          
          <div class="download-buttons">
            <a href="#" class="app-store-btn">
              <img src="https://developer.apple.com/assets/elements/badges/download-on-the-app-store.svg" alt="Download on the App Store" height="60">
            </a>
          </div>
        </div>
        
        <div class="hero-visual">
          <div class="phone-showcase">
            <img src="https://images.pexels.com/photos/590016/pexels-photo-590016.jpeg?auto=compress&cs=tinysrgb&w=400&h=800&fit=crop" alt="TaskFlow Pro Interface" class="app-screenshot">
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Key Features Section -->
  <section class="section">
    <div class="container">
      <div class="section-header text-center">
        <h2>Powerful Features</h2>
        <p class="text-lg text-gray">Everything you need to manage tasks efficiently</p>
      </div>
      
      <div class="features-grid">
        <div class="feature-card">
          <div class="feature-icon taskflow-gradient">
            <svg width="24" height="24" fill="white" viewBox="0 0 24 24">
              <path d="M12 2C13.1 2 14 2.9 14 4C14 5.1 13.1 6 12 6C10.9 6 10 5.1 10 4C10 2.9 10.9 2 12 2ZM21 9V7L15 7.5V9.5L21 9ZM3 7V9L9 9.5V7.5L3 7Z"/>
            </svg>
          </div>
          <h3>Smart Automation</h3>
          <p>AI-powered task suggestions and automatic prioritization based on your work patterns.</p>
        </div>
        
        <div class="feature-card">
          <div class="feature-icon taskflow-gradient">
            <svg width="24" height="24" fill="white" viewBox="0 0 24 24">
              <path d="M16 4C18.2 4 20 5.8 20 8S18.2 12 16 12S12 10.2 12 8S13.8 4 16 4ZM8 12C10.2 12 12 13.8 12 16S10.2 20 8 20S4 18.2 4 16S5.8 12 8 12Z"/>
            </svg>
          </div>
          <h3>Team Collaboration</h3>
          <p>Real-time collaboration tools with shared workspaces and seamless communication.</p>
        </div>
        
        <div class="feature-card">
          <div class="feature-icon taskflow-gradient">
            <svg width="24" height="24" fill="white" viewBox="0 0 24 24">
              <path d="M19 3H5C3.9 3 3 3.9 3 5V19C3 20.1 3.9 21 5 21H19C20.1 21 21 20.1 21 19V5C21 3.9 20.1 3 19 3ZM9 17L5 13L6.41 11.59L9 14.17L17.59 5.58L19 7L9 17Z"/>
            </svg>
          </div>
          <h3>Progress Analytics</h3>
          <p>Detailed insights into your productivity patterns with customizable reports and charts.</p>
        </div>
        
        <div class="feature-card">
          <div class="feature-icon taskflow-gradient">
            <svg width="24" height="24" fill="white" viewBox="0 0 24 24">
              <path d="M12 2L2 7L12 12L22 7L12 2ZM2 17L12 22L22 17M2 12L12 17L22 12"/>
            </svg>
          </div>
          <h3>Multi-Platform Sync</h3>
          <p>Seamlessly sync across all your devices with offline support and cloud backup.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Screenshots Section -->
  <section class="section bg-gradient">
    <div class="container">
      <div class="section-header text-center">
        <h2>See It In Action</h2>
        <p class="text-lg text-gray">Intuitive design meets powerful functionality</p>
      </div>
      
      <div class="screenshots-gallery">
        <div class="screenshot-item">
          <img src="https://images.pexels.com/photos/590016/pexels-photo-590016.jpeg?auto=compress&cs=tinysrgb&w=300&h=600&fit=crop" alt="Dashboard View" class="screenshot">
          <p class="screenshot-caption">Clean Dashboard</p>
        </div>
        <div class="screenshot-item">
          <img src="https://images.pexels.com/photos/699122/pexels-photo-699122.jpeg?auto=compress&cs=tinysrgb&w=300&h=600&fit=crop" alt="Task Management" class="screenshot">
          <p class="screenshot-caption">Task Management</p>
        </div>
        <div class="screenshot-item">
          <img src="https://images.pexels.com/photos/1092644/pexels-photo-1092644.jpeg?auto=compress&cs=tinysrgb&w=300&h=600&fit=crop" alt="Team Collaboration" class="screenshot">
          <p class="screenshot-caption">Team Collaboration</p>
        </div>
        <div class="screenshot-item">
          <img src="https://images.pexels.com/photos/3184360/pexels-photo-3184360.jpeg?auto=compress&cs=tinysrgb&w=300&h=600&fit=crop" alt="Analytics Dashboard" class="screenshot">
          <p class="screenshot-caption">Analytics Dashboard</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="section">
    <div class="container">
      <div class="section-header text-center">
        <h2>What Users Say</h2>
        <p class="text-lg text-gray">Join thousands of satisfied professionals</p>
      </div>
      
      <div class="testimonials-grid">
        <div class="testimonial-card">
          <div class="testimonial-rating">
            <div class="star-rating">
              <svg width="16" height="16" fill="#FFD700" viewBox="0 0 24 24" class="star">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
              <svg width="16" height="16" fill="#FFD700" viewBox="0 0 24 24" class="star">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
              <svg width="16" height="16" fill="#FFD700" viewBox="0 0 24 24" class="star">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
              <svg width="16" height="16" fill="#FFD700" viewBox="0 0 24 24" class="star">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
              <svg width="16" height="16" fill="#FFD700" viewBox="0 0 24 24" class="star">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
            </div>
          </div>
          <p class="testimonial-text">
            "TaskFlow Pro has completely transformed how our team manages projects. The automation features save us hours every week!"
          </p>
          <div class="testimonial-author">
            <img src="https://images.pexels.com/photos/3184291/pexels-photo-3184291.jpeg?auto=compress&cs=tinysrgb&w=100&h=100&fit=crop" alt="Sarah Johnson" class="author-avatar">
            <div>
              <h4>Sarah Johnson</h4>
              <p>Project Manager, TechCorp</p>
            </div>
          </div>
        </div>
        
        <div class="testimonial-card">
          <div class="testimonial-rating">
            <div class="star-rating">
              <svg width="16" height="16" fill="#FFD700" viewBox="0 0 24 24" class="star">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
              <svg width="16" height="16" fill="#FFD700" viewBox="0 0 24 24" class="star">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
              <svg width="16" height="16" fill="#FFD700" viewBox="0 0 24 24" class="star">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
              <svg width="16" height="16" fill="#FFD700" viewBox="0 0 24 24" class="star">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
              <svg width="16" height="16" fill="#FFD700" viewBox="0 0 24 24" class="star">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
            </div>
          </div>
          <p class="testimonial-text">
            "The analytics dashboard gives me incredible insights into my productivity patterns. I've never been more organized!"
          </p>
          <div class="testimonial-author">
            <img src="https://images.pexels.com/photos/3184357/pexels-photo-3184357.jpeg?auto=compress&cs=tinysrgb&w=100&h=100&fit=crop" alt="Michael Chen" class="author-avatar">
            <div>
              <h4>Michael Chen</h4>
              <p>Freelance Designer</p>
            </div>
          </div>
        </div>
        
        <div class="testimonial-card">
          <div class="testimonial-rating">
            <div class="star-rating">
              <svg width="16" height="16" fill="#FFD700" viewBox="0 0 24 24" class="star">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
              <svg width="16" height="16" fill="#FFD700" viewBox="0 0 24 24" class="star">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
              <svg width="16" height="16" fill="#FFD700" viewBox="0 0 24 24" class="star">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
              <svg width="16" height="16" fill="#FFD700" viewBox="0 0 24 24" class="star">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
              <svg width="16" height="16" fill="#FFD700" viewBox="0 0 24 24" class="star">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
            </div>
          </div>
          <p class="testimonial-text">
            "Best task management app I've ever used. The interface is beautiful and the features are incredibly powerful."
          </p>
          <div class="testimonial-author">
            <img src="https://images.pexels.com/photos/3184339/pexels-photo-3184339.jpeg?auto=compress&cs=tinysrgb&w=100&h=100&fit=crop" alt="Emma Rodriguez" class="author-avatar">
            <div>
              <h4>Emma Rodriguez</h4>
              <p>Marketing Director</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Newsletter Section -->
  <section class="section-sm">
    <div class="container">
      <EmailForm 
        title="Get TaskFlow Pro Updates"
        description="Be the first to know about new features and productivity tips"
        placeholder="Enter your email for updates"
        buttonText="Stay Updated"
      />
    </div>
  </section>

  <!-- Download CTA Section -->
  <section id="download" class="cta-section">
    <div class="container">
      <div class="cta-content text-center">
        <h2>Ready to Transform Your Productivity?</h2>
        <p class="text-xl">
          Join thousands of professionals who have already revolutionized their workflow with TaskFlow Pro.
        </p>
        <div class="download-buttons">
          <a href="#" class="app-store-btn">
            <img src="https://developer.apple.com/assets/elements/badges/download-on-the-app-store.svg" alt="Download on the App Store" height="60">
          </a>
        </div>
        <p class="cta-note">Free to download • Premium features available</p>
      </div>
    </div>
  </section>

  <Footer variant="app" />
</Layout>

<style>
  .taskflow-gradient {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  }

  .app-hero {
    padding: var(--spacing-20) 0;
    background: linear-gradient(135deg, #f8fafc 0%, white 100%);
  }

  .hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-12);
    align-items: center;
  }

  .app-badge {
    display: flex;
    align-items: center;
    gap: var(--spacing-4);
    margin-bottom: var(--spacing-6);
  }

  .badge-icon {
    width: 64px;
    height: 64px;
    border-radius: var(--border-radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .app-title {
    font-size: 2.5rem;
    font-weight: 800;
    margin: 0;
    color: var(--color-gray-800);
  }

  .app-subtitle {
    font-size: 1.25rem;
    color: var(--color-gray-600);
    margin: 0;
  }

  .hero-description {
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--color-gray-600);
    margin-bottom: var(--spacing-8);
  }

  .app-stats {
    display: flex;
    gap: var(--spacing-8);
    margin-bottom: var(--spacing-8);
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-1);
  }

  .stat-number {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-gray-800);
  }

  .stat-label {
    font-size: 0.875rem;
    color: var(--color-gray-500);
  }

  .star-rating {
    display: flex;
    gap: 2px;
    margin: var(--spacing-1) 0;
  }

  .download-buttons {
    display: flex;
    gap: var(--spacing-4);
    margin-bottom: var(--spacing-4);
  }

  .app-store-btn {
    transition: transform 0.2s ease;
  }

  .app-store-btn:hover {
    transform: scale(1.05);
  }

  .hero-visual {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .phone-showcase {
    position: relative;
    width: 300px;
    height: 600px;
    background: #1a1a1a;
    border-radius: 25px;
    padding: 20px;
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
  }

  .app-screenshot {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 15px;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--spacing-8);
  }

  .feature-card {
    text-align: center;
    padding: var(--spacing-6);
  }

  .feature-icon {
    width: 64px;
    height: 64px;
    border-radius: var(--border-radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto var(--spacing-4);
  }

  .feature-card h3 {
    margin-bottom: var(--spacing-3);
    color: var(--color-gray-800);
  }

  .feature-card p {
    color: var(--color-gray-600);
    line-height: 1.6;
  }

  .screenshots-gallery {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--spacing-6);
  }

  .screenshot-item {
    text-align: center;
  }

  .screenshot {
    width: 100%;
    max-width: 200px;
    height: 400px;
    object-fit: cover;
    border-radius: var(--border-radius-lg);
    box-shadow: var(--box-shadow-lg);
    margin-bottom: var(--spacing-3);
  }

  .screenshot-caption {
    font-size: 0.875rem;
    color: var(--color-gray-600);
    margin: 0;
  }

  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--spacing-8);
  }

  .testimonial-card {
    background: white;
    border-radius: var(--border-radius-lg);
    padding: var(--spacing-6);
    box-shadow: var(--box-shadow);
    transition: all 0.3s ease;
  }

  .testimonial-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--box-shadow-lg);
  }

  .testimonial-rating {
    margin-bottom: var(--spacing-4);
  }

  .testimonial-text {
    font-style: italic;
    color: var(--color-gray-700);
    margin-bottom: var(--spacing-6);
    line-height: 1.6;
  }

  .testimonial-author {
    display: flex;
    align-items: center;
    gap: var(--spacing-3);
  }

  .author-avatar {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    object-fit: cover;
  }

  .testimonial-author h4 {
    margin: 0;
    color: var(--color-gray-800);
    font-size: 0.875rem;
  }

  .testimonial-author p {
    margin: 0;
    color: var(--color-gray-500);
    font-size: 0.75rem;
  }

  .cta-section {
    padding: var(--spacing-20) 0;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    text-align: center;
  }

  .cta-content h2 {
    margin-bottom: var(--spacing-4);
    color: white;
  }

  .cta-content p {
    margin-bottom: var(--spacing-8);
    color: rgba(255, 255, 255, 0.9);
  }

  .cta-note {
    margin-top: var(--spacing-4);
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.8);
  }

  @media (max-width: 768px) {
    .hero-content {
      grid-template-columns: 1fr;
      gap: var(--spacing-8);
      text-align: center;
    }

    .app-title {
      font-size: 2rem;
    }

    .phone-showcase {
      width: 250px;
      height: 500px;
    }

    .app-badge {
      justify-content: center;
    }

    .app-stats {
      justify-content: center;
    }

    .download-buttons {
      justify-content: center;
    }

    .features-grid {
      grid-template-columns: 1fr;
    }

    .screenshots-gallery {
      grid-template-columns: repeat(2, 1fr);
    }

    .testimonials-grid {
      grid-template-columns: 1fr;
    }
  }
</style>